{
  "extends": "tsconfig/nextjs.json",
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["src/components/*"],
      "@pages/*": ["src/pages/*"],
      "@public/*": ["public/*"],
      "@generated/*": ["src/generated/*"],
      "@lib/*": ["src/lib/*"],
      "@contexts/*": ["src/contexts/*"]
    }
  }
}
